{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run RSpec(All Spec)",
      "type": "shell",
      "command": "bundle exec rspec --color",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
